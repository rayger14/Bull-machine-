{
  "version": "1.7.1-enhanced",
  "description": "Cost-aware throttles and risk management",

  "position_sizing": {
    "base_risk_pct": 0.075,
    "max_risk_pct": 0.15,
    "confidence_scaling": true,
    "kelly_fraction": 0.25
  },

  "cost_controls": {
    "atr_floor_percentile": 25,
    "min_atr_threshold": 0.01,
    "max_cost_drag_pct": 0.30,
    "spread_multiplier": 1.5
  },

  "loss_streak_management": {
    "cooldown_bars": 4,
    "max_consecutive_losses": 3,
    "size_reduction_pct": 0.5,
    "recovery_threshold": 2
  },

  "drawdown_controls": {
    "max_portfolio_dd": 0.12,
    "daily_loss_limit": 0.05,
    "monthly_loss_limit": 0.15,
    "correlation_limits": true
  },

  "market_conditions": {
    "low_volatility_threshold": 0.15,
    "high_volatility_threshold": 0.40,
    "news_event_buffer_hours": 2,
    "session_overlap_boost": 1.2
  },

  "health_bands": {
    "macro_veto_rate": [0.05, 0.15],
    "smc_2hit_rate": [0.30, 1.0],
    "hob_relevance": [0.0, 0.30],
    "delta_breaches": [0, 0]
  }
}